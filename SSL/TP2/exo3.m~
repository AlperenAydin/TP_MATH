clear all;close all; hold on;

A = 10 ; phi_0 = 90;

ve = 100;
v1 = 10; v2= 11; 
T = 2;

N =1000;

[k1,s1,M1] = signal_test(A,phi_0,T,ve,v1);
[k2,s2,M2] = signal_test(A,phi_0,T,ve,v2);

s = s1+s2;

subplot(4,2,1);
str  = sprintf('Signal 1: \n Signal de frequence v_0 = %d Hz: ',v1);
plot (k1/ve, s1);
title(str);
xlabel('t=kT_e');
ylabel('s_1(t)');

subplot(4,2,2);
str  = sprintf('Signal 2: \n Signal de frequence v_0 = %d Hz: ',v2);
plot (k2/ve, s2);
title(str);
xlabel('t=kT_e');
ylabel('s_2(t)');

subplot(4,2,[3,4]);
str  = sprintf('Le somme des deux signaux: ');
plot (k2/ve, s);
title(str);
xlabel('t=kT_e');
ylabel('s(t)');

S = fft(S,N)

subplot(4,2,)




